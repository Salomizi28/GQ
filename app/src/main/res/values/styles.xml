<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/ocean_blue</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:actionBarStyle">@color/ocean_blue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="appTitle">
        <item name="android:fontFamily">@font/classic_robot</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/ocean_blue</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="defaultText">
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/ocean_blue</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="homeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/home_button_margin</item>
        <item name="android:layout_marginStart">@dimen/home_button_margin</item>
        <item name="android:background">@drawable/background_button_light_blue</item>
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:paddingStart">@dimen/default_padding</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:drawablePadding">35dp</item>
    </style>

    <style name="gameTitle">
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textColor">@color/sky_blue</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="questionLabel" parent="gameTitle">
        <item name="android:minHeight">@dimen/double_question_size</item>
        <item name="android:layout_marginStart">@dimen/secondary_title_margin</item>
        <item name="android:layout_marginEnd">@dimen/secondary_title_margin</item>
        <item name="android:textColor">@color/sky_blue</item>
        <item name="android:textSize">@dimen/question_size</item>
    </style>

    <style name="answerButton">
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/background_button_blue_white_border</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="scoreText" parent="defaultText">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/ocean_blue</item>
    </style>

    <style name="scoreComment" parent="defaultText">
        <item name="android:textColor">@color/sky_blue</item>
    </style>

    <style name="restartButton" parent="defaultText">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_button_blue</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

</resources>
